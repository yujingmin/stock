# 数据库配置
DATABASE_URL=postgresql://quant_user:quant_password_dev@localhost:5432/quant_platform

# MongoDB 配置
MONGODB_URL=mongodb://localhost:27017/quant_platform
MONGODB_ENABLED=true

# Redis 配置
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# InfluxDB 配置（可选）
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=quant_influxdb_token_dev
INFLUXDB_ORG=quant_platform
INFLUXDB_BUCKET=market_data
INFLUXDB_ENABLED=false

# JWT 配置
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# AES 加密密钥 (用于策略代码加密，必须是32字节)
AES_ENCRYPTION_KEY=change-this-key-32-bytes-long!!

# CORS 配置
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:8000"]

# Claude API 配置（必填 - 用于 AI 策略生成）
# 请到 https://console.anthropic.com/ 获取 API Key
CLAUDE_API_KEY=sk-ant-api03-your-api-key-here
CLAUDE_API_BASE_URL=https://api.anthropic.com
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# 阿里云短信配置（可选）
ALIYUN_SMS_ACCESS_KEY_ID=
ALIYUN_SMS_ACCESS_KEY_SECRET=
ALIYUN_SMS_SIGN_NAME=
ALIYUN_SMS_TEMPLATE_CODE=

# 微信小程序配置（可选）
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# Redis 会话配置
SESSION_EXPIRE_MINUTES=30

# API 限流配置
RATE_LIMIT_PER_MINUTE=60
